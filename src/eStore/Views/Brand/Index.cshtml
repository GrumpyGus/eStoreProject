@model BrandViewModel
<div class="col-sm-12 col-xs-12">&nbsp;</div>
<div class="text-center col-sm-12 col-xs-12">
    <form asp-controller="Brand" asp-action="SelectBrand" method="post">
        <div class="col-sm-4 col-xs-12">&nbsp;</div>
        <div class="col-sm-4 col-xs-12" style="padding-bottom:10px;">
            <span style="font-size:medium;">Brands</span>
            <select asp-for="BrandId" asp-items="@Model.GetBrands()" class="form-group form-control" onchange="this.form.submit();">
                <option selected style="display:none;">Select Brand</option>
            </select>
        </div>
        <div class="col-sm-4 col-xs-12">&nbsp;</div>
    </form>
    <catalogue brand="@Model.BrandId"></catalogue>
</div>

<div class="modal" id="details_popup">
    <div class="modal-dialog">
        <div class="modal-content col-xs-12">
            <a href="" style="font-size:xx-large; text-decoration:none; color:#101010;" data-dismiss="modal" class="pull-right">X</a>
            <div class="modal-body" style="padding:0;">

               <div class="col-xs-12 text-center">
                    <img style="height:150px; width:150px;" alt="" id="detailsGraphic" />
                    <h3 id="name"></h3>
                    <span id="descr"></span>
                </div>

                <form asp-controller="Brand" asp-action="SelectItem" method="post" role="form">
                    <div class="text-center col-xs-12" style="margin-top:10px;">
                        <div class="col-xs-12">
                            <div class="col-xs-5 text-right" style="padding:0;">
                                <span>Price:</span>
                                <span id="msrp"></span>
                            </div>
                            <div>
                                <span class="col-xs-3 text-right">Qty:</span>
                                <div class="col-xs-2 text-left" style="padding:0;">
                                    <input asp-for="Qty" type="number" maxlength="3" size="3" style="width: 50px;" id="qty" />
                                    <input asp-for="Id" type="hidden" id="detailsId" />
                                </div>
                                <div class="col-xs-12 text-center" style="margin-top:10px;">
                                    <button type="submit" class="btn btn-sm btn-default" id="modalbtn">Add To Cart</button>
                                    <button id="btnRemove" type="submit" class="btn-sm btn btn-danger">Remove Item</button>
                                    <a href="/Cart" class="btn btn-sm btn-success">View Cart</a>

                                </div>
                            </div>
                        </div>
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <div id="results" class="col-xs-12 text-center">
                    @ViewBag.AddMessage
                </div>
            </div>
        </div><!--modal-content-->
    </div><!--modal-dialog-->
</div><!--modal-->